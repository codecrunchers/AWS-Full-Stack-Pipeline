USER jenkins
COPY ./config/FIRSTRUN.txt $JENKINS_HOME/FIRSTRUN.txt
#Mark as up to date
RUN echo "2.0" > /usr/share/jenkins/ref/jenkins.install.UpgradeWizard.state
RUN echo "2.0" > /usr/share/jenkins/ref/jenkins.install.InstallUtil.lastExecVersion
